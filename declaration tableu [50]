.data
    struct_size equ 2   ; Taille d'une structure en octets (sizeof(type) + sizeof(couleur))
    table_size equ 50   ; Nombre d'éléments dans le tableau

    struct_struc struc  ; Déclaration de la structure
        type db ?
        couleur db ?
    struc_end struc

    tableau struc table_size dup ({-1, -1})  ; Déclaration du tableau de 50 éléments initialisé à -1 pour type et couleur
